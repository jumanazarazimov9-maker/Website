    <script>
        // Data Storage
        let contentData = {
            stories: JSON.parse(localStorage.getItem('stories')) || [],
            plays: JSON.parse(localStorage.getItem('plays')) || [],
            interviews: JSON.parse(localStorage.getItem('interviews')) || []
        };

        // Tab Functionality
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                // Remove active class from all tabs
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                // Add active class to clicked tab
                btn.classList.add('active');
                document.getElementById(btn.dataset.tab).classList.add('active');
                
                // Update preview if needed
                if (btn.dataset.tab === 'preview') {
                    updatePreviews();
                }
            });
        });

        // Story Form Handler
        document.getElementById('storyForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const story = {
                id: Date.now(),
                title: document.getElementById('storyTitle').value,
                year: parseInt(document.getElementById('storyYear').value),
                description: document.getElementById('storyDescription').value,
                pages: parseInt(document.getElementById('storyPages').value),
                status: document.getElementById('storyStatus').value,
                createdAt: new Date().toISOString()
            };
            
            contentData.stories.push(story);
            saveData();
            updateStoriesList();
            logActivity(`Yangi hikoya qo'shildi: "${story.title}"`);
            
            this.reset();
        });

        // Play Form Handler
        document.getElementById('playForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const play = {
                id: Date.now(),
                title: document.getElementById('playTitle').value,
                year: parseInt(document.getElementById('playYear').value),
                theater: document.getElementById('playTheater').value,
                duration: document.getElementById('playDuration').value,
                description: document.getElementById('playDescription').value,
                createdAt: new Date().toISOString()
            };
            
            contentData.plays.push(play);
            saveData();
            updatePlaysList();
            logActivity(`Yangi spektakl qo'shildi: "${play.title}"`);
            
            this.reset();
        });

        // Interview Form Handler
        document.getElementById('interviewForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const interview = {
                id: Date.now(),
                title: document.getElementById('interviewTitle').value,
                date: document.getElementById('interviewDate').value,
                organization: document.getElementById('interviewOrganization').value,
                url: document.getElementById('interviewUrl').value,
                content: document.getElementById('interviewContent').value,
                createdAt: new Date().toISOString()
            };
            
            contentData.interviews.push(interview);
            saveData();
            updateInterviewsList();
            logActivity(`Yangi intervyu qo'shildi: "${interview.title}"`);
            
            this.reset();
        });

        // Update Stories List
        function updateStoriesList() {
            const list = document.getElementById('storiesList');
            list.innerHTML = '';
            
            contentData.stories.forEach(story => {
                const item = document.createElement('div');
                item.className = 'list-item';
                item.innerHTML = `
                    <div class="item-info">
                        <h4>${story.title}</h4>
                        <div class="item-meta">
                            ${story.year} yil ‚Ä¢ ${story.pages} sahifa ‚Ä¢ 
                            <span style="color: ${story.status === 'published' ? '#059669' : '#D97706'}">
                                ${story.status === 'published' ? 'Nashr etilgan' : 'Qoralama'}
                            </span>
                        </div>
                    </div>
                    <div class="item-actions">
                        <button class="action-btn edit-btn" onclick="editStory(${story.id})">Tahrirlash</button>
                        <button class="action-btn delete-btn" onclick="deleteStory(${story.id})">O'chirish</button>
                    </div>
                `;
                list.appendChild(item);
            });
            
            updateStatistics();
        }

        // Update Plays List
        function updatePlaysList() {
            const list = document.getElementById('playsList');
            list.innerHTML = '';
            
            contentData.plays.forEach(play => {
                const item = document.createElement('div');
                item.className = 'list-item';
                item.innerHTML = `
                    <div class="item-info">
                        <h4>${play.title}</h4>
                        <div class="item-meta">
                            ${play.year} yil ‚Ä¢ ${play.theater} ‚Ä¢ ${play.duration}
                        </div>
                    </div>
                    <div class="item-actions">
                        <button class="action-btn edit-btn" onclick="editPlay(${play.id})">Tahrirlash</button>
                        <button class="action-btn delete-btn" onclick="deletePlay(${play.id})">O'chirish</button>
                    </div>
                `;
                list.appendChild(item);
            });
            
            updateStatistics();
        }

        // Update Interviews List
        function updateInterviewsList() {
            const list = document.getElementById('interviewsList');
            list.innerHTML = '';
            
            contentData.interviews.forEach(interview => {
                const item = document.createElement('div');
                item.className = 'list-item';
                item.innerHTML = `
                    <div class="item-info">
                        <h4>${interview.title}</h4>
                        <div class="item-meta">
                            ${new Date(interview.date).toLocaleDateString('uz-UZ')} ‚Ä¢ ${interview.organization}
                        </div>
                    </div>
                    <div class="item-actions">
                        <button class="action-btn edit-btn" onclick="editInterview(${interview.id})">Tahrirlash</button>
                        <button class="action-btn delete-btn" onclick="deleteInterview(${interview.id})">O'chirish</button>
                    </div>
                `;
                list.appendChild(item);
            });
            
            updateStatistics();
        }

        // Update Previews
        function updatePreviews() {
            updateStoriesPreview();
            updatePlaysPreview();
            updateInterviewsPreview();
        }

        function updateStoriesPreview() {
            const container = document.getElementById('storiesPreview');
            container.innerHTML = '';
            
            contentData.stories.slice(-3).forEach(story => {
                const card = document.createElement('div');
                card.className = 'preview-card';
                card.innerHTML = `
                    <h4>${story.title}</h4>
                    <div class="preview-meta">${story.year} yil ‚Ä¢ ${story.pages} sahifa</div>
                    <p>${story.description}</p>
                `;
                container.appendChild(card);
            });
        }

        function updatePlaysPreview() {
            const container = document.getElementById('playsPreview');
            container.innerHTML = '';
            
            contentData.plays.slice(-3).forEach(play => {
                const card = document.createElement('div');
                card.className = 'preview-card';
                card.innerHTML = `
                    <h4>${play.title}</h4>
                    <div class="preview-meta">${play.year} yil ‚Ä¢ ${play.theater}</div>
                    <p>${play.description || 'Tavsif mavjud emas'}</p>
                `;
                container.appendChild(card);
            });
        }

        function updateInterviewsPreview() {
            const container = document.getElementById('interviewsPreview');
            container.innerHTML = '';
            
            contentData.interviews.slice(-3).forEach(interview => {
                const card = document.createElement('div');
                card.className = 'preview-card';
                card.innerHTML = `
                    <h4>${interview.title}</h4>
                    <div class="preview-meta">${new Date(interview.date).toLocaleDateString('uz-UZ')} ‚Ä¢ ${interview.organization}</div>
                    <p>${interview.content.substring(0, 100)}...</p>
                `;
                container.appendChild(card);
            });
        }

        // Delete Functions
        function deleteStory(id) {
            if (confirm('Haqiqatan ham bu hikoyani o\'chirmoqchimisiz?')) {
                contentData.stories = contentData.stories.filter(story => story.id !== id);
                saveData();
                updateStoriesList();
                logActivity(`Hikoya o'chirildi (ID: ${id})`);
            }
        }

        function deletePlay(id) {
            if (confirm('Haqiqatan ham bu spektaklni o\'chirmoqchimisiz?')) {
                contentData.plays = contentData.plays.filter(play => play.id !== id);
                saveData();
                updatePlaysList();
                logActivity(`Spektakl o'chirildi (ID: ${id})`);
            }
        }

        function deleteInterview(id) {
            if (confirm('Haqiqatan ham bu intervyuni o\'chirmoqchimisiz?')) {
                contentData.interviews = contentData.interviews.filter(interview => interview.id !== id);
                saveData();
                updateInterviewsList();
                logActivity(`Intervyu o'chirildi (ID: ${id})`);
            }
        }

        // Edit Functions (placeholder)
        function editStory(id) {
            alert(`Hikoya tahrirlash funksiyasi ishlab chiqilmoqda (ID: ${id})`);
        }

        function editPlay(id) {
            alert(`Spektakl tahrirlash funksiyasi ishlab chiqilmoqda (ID: ${id})`);
        }

        function editInterview(id) {
            alert(`Intervyu tahrirlash funksiyasi ishlab chiqilmoqda (ID: ${id})`);
        }

        // Export Functions
        function exportStories() {
            const dataStr = JSON.stringify(contentData.stories, null, 2);
            downloadFile(dataStr, 'stories.json', 'application/json');
            logActivity('Hikoyalar eksport qilindi');
        }

        function exportPlays() {
            const dataStr = JSON.stringify(contentData.plays, null, 2);
            downloadFile(dataStr, 'plays.json', 'application/json');
            logActivity('Spektakllar eksport qilindi');
        }

        function exportInterviews() {
            const dataStr = JSON.stringify(contentData.interviews, null, 2);
            downloadFile(dataStr, 'interviews.json', 'application/json');
            logActivity('Intervyular eksport qilindi');
        }

        function downloadFile(content, fileName, contentType) {
            const blob = new Blob([content], { type: contentType });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = fileName;
            a.click();
            URL.revokeObjectURL(url);
        }

        // Save Data to LocalStorage
        function saveData() {
            localStorage.setItem('stories', JSON.stringify(contentData.stories));
            localStorage.setItem('plays', JSON.stringify(contentData.plays));
            localStorage.setItem('interviews', JSON.stringify(contentData.interviews));
            updateStatistics();
        }

        // Update Statistics
        function updateStatistics() {
            document.getElementById('totalStories').textContent = contentData.stories.length;
            document.getElementById('totalPlays').textContent = contentData.plays.length;
            document.getElementById('totalInterviews').textContent = contentData.interviews.length;
            document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString('uz-UZ');
        }

        // Security Logging
        function logActivity(message) {
            const logContainer = document.getElementById('securityLog');
            const timestamp = new Date().toLocaleTimeString('uz-UZ');
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.textContent = `[${timestamp}] ${message}`;
            logContainer.appendChild(logEntry);
            logContainer.scrollTop = logContainer.scrollHeight;
        }

        // Initialize
        function init() {
            updateStoriesList();
            updatePlaysList();
            updateInterviewsList();
            updateStatistics();
            logActivity('Admin panel ishga tushdi');
        }

        // Run initialization when page loads
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
